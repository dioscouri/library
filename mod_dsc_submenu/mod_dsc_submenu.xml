<?xml version="1.0" encoding="utf-8"?>
<install type="module" version="1.5.0" position="submenu" client="administrator" method="upgrade">
    <name>Dioscouri  - Admin-side Submenu</name>
    <author>Dioscouri</author>
    <authorEmail>info@dioscouri.com</authorEmail>
    <authorUrl>http://www.dioscouri.com</authorUrl>
    <version>0.9.0</version>
    <creationDate>October 2011</creationDate>
    <copyright>2012 Dioscouri.com</copyright>
    <license>GNU General Public License</license>
    <description>Displays the admin-side submen with optional bootstrapped theme and dropdowns</description>
    
    <files>
        <filename module="mod_dsc_submenu">mod_dsc_submenu.php</filename>
        <filename>index.html</filename>
        <folder>tmpl</folder>
        <folder>css</folder>
    </files>
    
	<languages folder="languages">
		<language tag="en-GB">en-GB.mod_dsc_submenu.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset name="basic">
	
				<field name="moduleclass_sfx" type="text" default="" label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL" description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC" />
				
				<field
					name="layout"
					type="modulelayout"
					label="JFIELD_ALT_LAYOUT_LABEL"
					description="JFIELD_ALT_MODULE_LAYOUT_DESC" />
		</fieldset>
		</fields>
    </config>
	
	<params>
		<param name="moduleclass_sfx" type="text" default="" label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL" description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC" />
    </params>
</install>