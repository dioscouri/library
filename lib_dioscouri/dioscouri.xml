<?xml version="1.0" encoding="utf-8"?>
<extension type="library" method="upgrade" version="2.5">
	<name>Dioscouri Library</name>
	<libraryname>dioscouri</libraryname>
	<author>Dioscouri Design</author>
	<creationDate>June 2012</creationDate>
	<copyright>Copyright (C) 2012 Dioscouri Design. All rights reserved.</copyright>
	<license>GNU General Public License version 2 or later</license>
	<authorEmail>info@dioscouri.com</authorEmail>
	<authorUrl>www.dioscouri.com</authorUrl>
	<version>3.7.0</version>
	<description></description>
    
	<files>
		<file>dioscouri.php</file>
        <file>loader.php</file>
        <folder>component</folder>
        <folder>highroller</folder>
        <folder>library</folder>
        <folder>tools</folder>
	</files>
    
	<languages folder="language">
		<language tag="en-GB">en-GB/en-GB.lib_dioscouri.ini</language>
	</languages>
    
    <!-- Media -->
    <media destination="dioscouri" folder="media">
        <folder>css</folder>
        <folder>bootstrap</folder>
        <folder>images</folder>
        <folder>js</folder>
        <folder>jquery</folder>
        <file>index.html</file>
    </media>
    
    <updateservers>
       <server type="extension" priority="1" name="Dioscouri Library Updates">http://updates.dioscouri.com/library/updates.xml</server>
    </updateservers>
    
</extension>
